<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Educator_LM_Details"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:text="Learning Materials"
            android:textColor="#5269CD"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/lmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Chapter 3 - Human (Notes)"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/lmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:text="Posted by you, 16/11/2023, 08:10 am"
        android:textColor="#545353"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/lmDescription"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Dear students, this is the notes for tmrâ€™s lesson. Kindly go through before class tmr."
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
       />

    <androidx.cardview.widget.CardView
        android:id="@+id/file"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="4dp"
        android:backgroundTint="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp">

            <ImageView
                android:id="@+id/pdfIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/pdf_svgrepo_com" />

            <TextView
                android:id="@+id/lmFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Chapter 3 - Human"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/pdfIcon" />


            <!--            <TextView-->
<!--                android:id="@+id/textView7"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="2dp"-->
<!--                android:text="PDF"-->
<!--                android:textColor="#545353"-->
<!--                android:layout_toStartOf="@id/textView19"/>-->
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnEditAnnouncement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/button_colour"
        android:text="Edit Resources"
        android:textColor="@color/white"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:textSize="18sp" />

</LinearLayout>