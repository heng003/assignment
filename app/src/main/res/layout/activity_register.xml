<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_Activity"
    android:orientation="vertical"
    android:background="@color/theme_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/theaugusta"
        android:text="Hoot-n-Holler"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/TV_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create A New Account Now!"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

<!--    <ImageView-->
<!--        android:id="@+id/profile_picture"-->
<!--        android:layout_width="112dp"-->
<!--        android:layout_height="112dp"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_marginTop="30dp"-->
<!--        android:background="@drawable/profile_photo_shape"-->
<!--        android:src="@drawable/profile_man_photo_profile"-->
<!--        tools:ignore="MissingClass" />-->

    <TextView
        android:id="@+id/fullnameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="Full name:"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/register_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:ems="13"
        android:hint="Ali bin Ahmad"
        android:inputType="textEmailAddress"
        android:padding="13dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"/>

    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Email:"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:ems="13"
        android:hint="alibaba@gmail.com"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"/>

    <TextView
        android:id="@+id/passwordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Password:"
        android:layout_marginTop="20dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:ems="13"
        android:hint="usbw7e24"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"/>

    <TextView
        android:id="@+id/confirmpasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:text="Confirm Password:"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/register_cofirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/black"
        android:ems="13"
        android:hint="usbw7e24"
        android:inputType="textPassword"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/roleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:text="Role:"
        android:textColor="@color/black"
        />

    <RadioGroup
        android:id="@+id/roleselection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/register_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Student"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/register_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Parent"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/register_educator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:text="Educator"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RadioGroup>
    <Button
        android:id="@+id/register_create_account"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/button_colour"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Create Account"
        android:textSize="18sp"
        app:iconSize="50dp"
        android:textColor="@color/white"/>



</LinearLayout>