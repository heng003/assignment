<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Feedback_Activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_marginTop="5dp"

            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12 Nov 2023 - 18 Nov 2023"
            android:textColor="#0E194D"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Positive Feedback"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="23dp"
            />

        <TextView
            android:id="@+id/num_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" (1)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/brown_rectangle"
        android:padding="10dp"
        android:layout_margin="20dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/kokxiang"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/kokxiang"
                app:shapeAppearanceOverlay="@style/circular"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/educator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lee Kok Xiang"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Science 3 Champion"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:id="@+id/classroom"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good attitude! Keep it on!"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:padding="10sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Negative Feedback"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="23dp"
            />

        <TextView
            android:id="@+id/num_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" (0)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

    </LinearLayout>

</LinearLayout>