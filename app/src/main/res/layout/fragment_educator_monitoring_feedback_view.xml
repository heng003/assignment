<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".educator_monitoring_feedback_view"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/john2"
        android:layout_gravity="center"
        app:strokeColor="#7486D4"
        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/circular"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="John Tiew"
        android:textColor="#0E194D"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Positive Feedback" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Negative Feedback" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Tabs"
        />

    <ImageButton
        android:id="@+id/addFeedbackBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_add_24"
        android:background="@drawable/green_rectangle"
        android:layout_marginLeft="320dp"
        android:contentDescription="Add Feedback Button"
        />



</LinearLayout>